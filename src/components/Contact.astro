<style>
  .contact-content {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }

  .contact-copy {
    color: var(--text-secondary);
    font-size: 1.05rem;
    line-height: 1.7;
    margin-bottom: 2.5rem;
  }

  .contact-links {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: center;
  }

  .contact-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 2rem;
    border: 1px solid var(--border-subtle);
    border-radius: 8px;
    color: var(--text-primary);
    font-size: 1rem;
    font-weight: 500;
    min-width: 280px;
    justify-content: center;
    transition: border-color var(--transition-base), background var(--transition-base), transform var(--transition-fast);
    position: relative;
    overflow: hidden;
  }

  .contact-btn:hover {
    border-color: var(--accent-cyan);
    background: rgba(56, 189, 248, 0.05);
    color: var(--accent-cyan);
    transform: translateY(-2px);
  }

  .contact-btn svg {
    flex-shrink: 0;
  }

  /* Email easter egg */
  .email-easter-egg {
    position: absolute;
    bottom: -1.5rem;
    left: 50%;
    transform: translateX(-50%);
    font-size: 0.7rem;
    color: var(--accent-amber);
    opacity: 0;
    transition: opacity var(--transition-base), bottom var(--transition-base);
    white-space: nowrap;
    pointer-events: none;
  }

  .email-btn:hover .email-easter-egg {
    opacity: 1;
    bottom: -1.25rem;
  }

  @media (max-width: 640px) {
    .contact-btn {
      min-width: unset;
      width: 100%;
    }
  }
</style>
